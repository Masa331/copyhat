<!DOCTYPE html>
<html>
  <head>
    <title>CopyHat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container">
      <nav class='navbar'>
        <%= link_to root_path, class: 'navbar-brand' do %>
          <h2>CopyHat</h2>
        <% end %>

        <ul class='nav navbar-nav pull-xs-right'>
          <li class='nav-item'>
            <% if current_user.anonymous? %>
              <%= link_to 'Přihlásit', new_login_path %>
            <% else %>
              <%= button_to 'Odhlásit', sessions_destroy_path, method: :delete %>
            <% end %>
          </li>
        </ul>
      </nav>

      <hr class='header-divider'>

      <% if flash.any? %>
        <div class="row">
          <div class="col-sm-12">
            <% flash.each do |type, msg| %>
              <div class="alert alert-success">
                <%= msg %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <div id="elm-main-container">
      </div>

      <%= yield %>

      <footer class="footer">
        <p>© 2016 <a href="http://imagineanything.cz">Imagine Anything</a></p>
      </footer>
    </div>
  </body>
</html>
