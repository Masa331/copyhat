<!DOCTYPE html>
<html>
  <head>
    <title>CopyHat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container">
      <nav class='navbar'>
        <%= link_to root_path, class: 'navbar-brand' do %>
          <%= image_tag 'logo_wide.png' %>
        <% end %>

        <% unless current_user.anonymous? %>
          <ul class='nav navbar-nav pull-xs-right'>
            <li class='nav-item'>
              <% if current_page?(forms_path) || current_page?('/') %>
                <u><%= link_to 'Formuláře', forms_path %></u>
              <% else %>
                <%= link_to 'Formuláře', forms_path %>
              <% end %>
            </li>

            <li class='nav-item'>
              <%= link_to 'Odhlásit', sessions_destroy_path, method: :delete %>
            </li>
          </ul>
        <% end %>
      </nav>

      <hr class='header-divider'>

      <% if flash.any? %>
        <div class="row">
          <div class="col-sm-12">
            <% flash.each do |type, msg| %>
              <div class="alert alert-success">
                <%= msg %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <%= yield %>

      <footer class="footer">
        <p>© 2016 <a href="http://imagineanything.cz">Imagine Anything</a></p>
      </footer>
    </div>
  </body>
</html>
